        	</intent-filter>
        </activity>
	    <activity 
	        android:name="com.skyesmechanical.OilProductionLogApp.CreateLease"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity 
            android:name="com.skyesmechanical.OilProductionLogApp.OilLog"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize">
