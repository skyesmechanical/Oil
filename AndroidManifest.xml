        </activity>
        <activity 
            android:name="com.skyesmechanical.OilProductionLogApp.SendData"
            android:label="@string/app_name"
            android:configChanges="orientation"
            android:windowSoftInputMode="adjustResize">
        </activity>
        <activity android:name="com.skyesmechanical.OilProductionLogApp.ELD"
            android:label="@string/app_name"
            android:configChanges="orientation"
